# VERN Example Environment Variables
# Copy this file to .env and fill in your real values.
# Never commit your real .env file or secrets to version control.

# API keys (replace with your own, never share real keys)
OPENAI_API_KEY=your-openai-key-here
GEMINI_API_KEY=your-gemini-key-here

# Database paths
SQLITE_DB_PATH=./db/vern.sqlite
CHROMA_DB_PATH=./chroma_data/

# Other config
DEBUG=false
VERN_ENV=development

# Accessibility and internationalization
LANGUAGE=en
ENABLE_SCREEN_READER=false

# Add additional variables as needed for your setup
